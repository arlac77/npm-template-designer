{
  "name": "@template-tools/template-designer",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "svelte",
    "template",
    "vite",
    "web"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "prepare": "vite build",
    "start": "vite",
    "test": "npm run test:cafe",
    "test:cafe": "testcafe $BROWSER:headless tests/cafe/*.js -s build/test --app-init-delay 5000 --app \"vite preview\"",
    "lint": "npm run lint:css",
    "lint:css": "stylelint ./src/*.css",
    "preview": "vite preview"
  },
  "dependencies": {
    "aggregation-repository-provider": "^5.3.23",
    "bitbucket-repository-provider": "^5.0.0",
    "content-entry": "^6.0.0",
    "gitea-repository-provider": "^2.4.41",
    "github-repository-provider": "^8.0.4",
    "mf-styling": "^1.7.48",
    "repository-provider": "^32.6.9",
    "svelte-common": "^4.22.10",
    "svelte-guard-history-router": "^5.5.28",
    "svelte-repository-provider": "^1.7.68",
    "svelte-session-manager": "^2.2.0"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@sveltejs/vite-plugin-svelte": "^2.0.3",
    "npm-pkgbuild": "^11.5.15",
    "semantic-release": "^20.1.1",
    "stylelint": "^15.2.0",
    "stylelint-config-standard": "^30.0.1",
    "svelte": "^3.55.1",
    "testcafe": "^2.3.1",
    "vite": "^4.1.4"
  },
  "optionalDependencies": {
    "mf-hosting-cloudflare": "^1.0.5",
    "mf-hosting-frontend": "^1.7.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/component-template-designer"
  },
  "bugs": {
    "url": "https://github.com/arlac77/component-template-designer/issues"
  },
  "homepage": "https://github.com/arlac77/component-template-designer#readme",
  "pkgbuild": {
    "content": {
      "${install.dir}": "build/"
    },
    "frontend": true,
    "install.dir": "${install.base.dir}${name}/frontend/"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --available --continue --publish dist"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/*.deb",
              "label": "any Debian Package"
            },
            {
              "path": "dist/*any.pkg.*",
              "label": "any Arch Linux Package"
            },
            {
              "path": "dist/*x86_64.pkg.*",
              "label": "x86_64 Arch Linux Package"
            },
            {
              "path": "dist/*aarch64.pkg.*",
              "label": "arm64 Arch Linux Package"
            },
            {
              "path": "dist/*noarch.rpm",
              "label": "noarch RPM"
            },
            {
              "path": "dist/*x86_64.rpm",
              "label": "x86_64 RPM"
            },
            {
              "path": "dist/*aarch64.rpm",
              "label": "arm64 RPM"
            }
          ]
        }
      ]
    ]
  },
  "template": {
    "properties": {
      "testcafe": {
        "options": "--app-init-delay 5000"
      }
    },
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-cloudflare",
      "arlac77/template-svelte-app",
      "arlac77/template-testcafe"
    ]
  }
}
